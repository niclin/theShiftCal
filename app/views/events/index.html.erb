<div class="col-md-12">

  <div id= "custom-search-input">


    <%= form_tag(events_path, method: :get, id: "search_form") do %>
    <%= text_field_tag :slack, params[:slack], placeholder:"Search your slack id and export your calendar", size:150 %>
    <%= submit_tag "Search" %>
    <% end %>

    </div>
    <% if current_user %>
      <%= link_to("Set up a new weekly shift", new_week_table_path, class:"btn btn-primary pull-right") %>
      <% end %>

    <table class="table table-hover">
    <thead>
      <tr>

        <td>Shift</td>
        <td>TAs</td>

        <td>Calendar Download Links</td>
      </tr>
    </thead>
    <tbody>

      <% if @events.present? %>
     <%= render "event" %>
     <% else %>
     <p>No such slack Id</p>
     <% end %>
   </tr>

    </tbody>
    </table>

</div>
